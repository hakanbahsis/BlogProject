@using EntityLayer.Concrete
@model EntityLayer.Concrete.Blog
@{
    ViewData["Title"] = "AddBlog";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}


<div class="card">
    <div class="card-body">
        <h4 class="card-title">Blog Ekle</h4>
        <form asp-action="AddBlog" asp-controller="ControlPanel" class="forms-sample" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label >Kategori</label>

                @Html.DropDownListFor(p=>p.CategoryID,(List<SelectListItem>)ViewBag.BlogCategoryList,new{@class="form-control ",@id="search"})
            </div>
            <div class="form-group">
                <label >Başlık</label>
               
                <input type="text" name="BlogTitle" class="form-control" id="exampleInputName1" placeholder="Başlık">
            </div>
            <div class="form-group">
                <label for="exampleTextarea1">Blog Yazısı</label>
                
                <textarea name="BlogContent" class="form-control" id="summernote"></textarea>
            </div>

@*            <div class="mb-3">
                <label for="formFileSm" class="form-label">Görsel küçük</label>
                <input name="BlogThumbnailImage" class="form-control form-control-sm" type="text">
            </div>*@
            <div class="mb-3">
                <label for="formFileSm" class="form-label">Görsel</label>
                <input name="Image1" class="form-control form-control-sm" type="file">
            </div>
       



            <button class="btn btn-primary me-2">Kaydet</button>
            <button class="btn btn-danger" asp-controller="About"
                    asp-action="Index">
                Vazgeç
            </button>
        </form>
    </div>
</div>


<script type="text/javascript">
   
</script>

<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>
<script>
    $('#summernote').summernote({
        tabsize: 2,
        height: 70,
        toolbar: [
            ['style', ['style']],
            ['font', ['bold', 'underline', 'clear']],
            ['color', ['color']],
            ['para', ['ul', 'ol', 'paragraph']],
            ['table', ['table']],
            ['insert', ['link', 'picture', 'video']],
            ['view', ['fullscreen', 'codeview', 'help']]
        ]
    });


    $(function () {
        $('#search').select2();
    });
</script>