@using EntityLayer.Concrete
@model List<ContactBox>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@if (ViewBag.Count<1)
{
    <a href="/Admin/Contact/ContactAdd" class="btn btn-outline-danger">Ekle</a>

}
<div class="col-lg-12">
    <div class="ibox ">
        <div class="ibox-title">
            <h5> İletişim Sayfası</h5>
            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    <i class="fa fa-wrench"></i>
                </a>
                <ul class="dropdown-menu dropdown-user">
                    <li>
                        <a href="#" class="dropdown-item">Config option 1</a>
                    </li>
                    <li>
                        <a href="#" class="dropdown-item">Config option 2</a>
                    </li>
                </ul>
                <a class="close-link">
                    <i class="fa fa-times"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content">
            <table class="table table-hover ">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Başlık</th>
                        <th>Alt Başlık</th>
                        <th>Harita Bilgisi</th>
                        <th>Adres</th>
                        <th>Mail</th>
                        <th>Telefon</th>
                        <th>Güncelle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        

                        <tr>
                            <th>@item.ID</th>
                            <td>@item.Title</td>
                            <td>@item.SubTitle</td>
                            <td>@item.Map.Substring(0,100)</td>
                            <td>@item.Adress</td>
                            <td>@item.Email</td>
                            <td>@item.Telefon</td>

                            <td><a href="/Admin/Contact/ContactEdit/@item.ID" class="btn btn-outline-danger">Güncelle</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
